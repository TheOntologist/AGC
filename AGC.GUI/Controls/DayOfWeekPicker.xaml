<UserControl x:Class="AGC.GUI.Controls.DayOfWeekPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="68">
    <Grid>
        <ComboBox Name="DayOfWeekList" Style="{StaticResource DatePicker}" SelectionChanged="DayOfWeekList_SelectionChanged"  AutomationProperties.Name="Day of Week" PreviewKeyUp="DayOfWeekList_PreviewKeyUp" />
    </Grid>
</UserControl>
